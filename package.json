{
	"name": "esp-engine",
	"displayName": "esp-engine",
	"description": "ESP-IDF Development Engine for Microsoft's Code Editor VSCode.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:esp-engine.initiate"
	],
	"main": "./out/esp-engine.js",
	"contributes": {
		"commands": [
			{
				"command": "esp-engine.initialise",
				"title": "ESP_ENGINE : Init Directory (Initialise)"
			},
			{
				"command": "esp-engine.build",
				"title": "ESP_ENGINE : Build Project (Build)"
			},
			{
				"command": "esp-engine.clean",
				"title": "ESP_ENGINE : Delete Built Files (Clean)"
			},
			{
				"command": "esp-engine.flash",
				"title": "ESP_ENGINE : Flash Target Device (Flash)"
			},
			{
				"command": "esp-engine.config",
				"title": "ESP_ENGINE : Config Project Settings (Menuconfig)"
			},
			{
				"command": "esp-engine.setup",
				"title": "ESP_ENGINE : Setup Toolchain (Setup)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}
